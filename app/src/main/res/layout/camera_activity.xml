<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cmu.mutuelle.mutuelle.CameraActivity">

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/startCamera"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagePreview"
        android:layout_marginStart="20dp"
        android:text="Take Picture" />

    <Button
        android:id="@+id/savePicturePath"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagePreview"
        android:layout_toEndOf="@+id/startCamera"
        android:text="Save Picture" />
</RelativeLayout>
